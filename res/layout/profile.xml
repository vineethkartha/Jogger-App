<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/profage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profusr"
        android:layout_below="@+id/profusr"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/profht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profage"
        android:layout_below="@+id/profage"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/profwt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profht"
        android:layout_below="@+id/profht"
        android:layout_marginTop="33dp"
        android:ems="10"
        android:inputType="number" />

    <EditText
        android:id="@+id/profpasswd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/profwt"
        android:layout_below="@+id/profwt"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/profusr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="31dp"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/profbmi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/profage"
        android:layout_marginLeft="33dp"
        android:layout_toRightOf="@+id/profusr"
        android:text="BMI"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/profupdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/profbmi"
        android:layout_below="@+id/profpasswd"
        android:layout_marginRight="42dp"
        android:layout_marginTop="30dp"
        android:text="Update" />

</RelativeLayout>
</ScrollView>